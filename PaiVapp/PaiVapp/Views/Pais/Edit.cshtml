@model PaiVapp.Models.Pais

@{
    ViewData["Title"] = "EditarPais";
}

<h2>Editar</h2>

<h4>Pais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
      

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="NPais" class="control-label"></label>
                <input asp-for="NPais" class="form-control" />
                <span asp-validation-for="NPais" class="text-danger"></span>
            </div>
            @if (Model.Estado == false)
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                        </label>
                    </div>
                   
                </div>

            }
            else
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                        @Html.DisplayFor(model => model.Estado)  @Html.DisplayNameFor(model => model.Estado) 
                        </label>
                      
                    </div>

                </div>

            }

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al Indice</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

