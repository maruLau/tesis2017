@model PaiVapp.Models.Departamento


@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <label asp-for="Pais" class="control-label"></label>
                    <select asp-for="Pais.ID" class="form-control" asp-items="ViewBag.PaisID">
                    </select>
                    
                    <span asp-validation-for="Pais" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="CodDepartamento" class="control-label"></label>
                    <input asp-for="CodDepartamento" class="form-control" />
                    <span asp-validation-for="CodDepartamento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NDepartamento" class="control-label"></label>
                    <input asp-for="NDepartamento" class="form-control" />
                    <span asp-validation-for="NDepartamento" class="text-danger"></span>
                </div>
           
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
