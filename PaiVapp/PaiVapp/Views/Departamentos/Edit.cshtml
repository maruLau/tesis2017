@model PaiVapp.Models.Departamento

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Pais" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Pais)</div>
             
            </div>
            <div class="form-group">
                <label asp-for="CodDepartamento" class="control-label"></label>
                <input asp-for="CodDepartamento" class="form-control" />
                <span asp-validation-for="CodDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NDepartamento" class="control-label"></label>
                <input asp-for="NDepartamento" class="form-control" />
                <span asp-validation-for="NDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
